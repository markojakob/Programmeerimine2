@page "/"

<PageTitle>Cars</PageTitle>

<h1>Cars</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (cars == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <p><a class="btn btn-primary" href="/create">Add new</a></p>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Model</th>
                <th>CarMaker</th>
                <th>Price</th>
                <th>Colour</th>
                <th>Description</th>
                <th>KmTariff</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in cars)
            {
                <tr>
                    <td>@car.Id</td>
                    <td>@car.Model</td>
                    <td>@car.CarMaker</td>
                    <td>@car.Price</td>
                    <td>@car.Colour</td>
                    <td>@car.Description</td>
                    <td>@car.KmTariff</td>
                    <td>@car.Category</td>
                    <td>
                        <a href="/edit/@car.Id" class="btn btn-primary">Edit</a>
                        <button class="btn btn-primary" @onclick="() => Delete(car.Id)">Delete</button>
                    </td>
                </tr>            
            }
        </tbody>
    </table>
}
